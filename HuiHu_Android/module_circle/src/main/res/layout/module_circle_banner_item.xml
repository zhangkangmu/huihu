<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.huihu.uilib.customize.CornerImageView
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:corner_radius="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="44dp"
        android:layout_height="44dp" />

    <TextView
        android:id="@+id/tv_join"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:background="@drawable/module_circle_selector_join_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:gravity="center"
        android:lineHeight="21sp"
        android:lineSpacingExtra="7sp"
        android:text="加入"
        android:textColor="@color/global_blue"
        android:textSize="14sp" />
     <ImageView
         android:id="@+id/iv_community"
         app:layout_constraintTop_toTopOf="@id/image"
         android:layout_marginTop="5dp"
         app:layout_constraintLeft_toRightOf="@id/image"
         android:layout_marginLeft="12dp"
         android:src="@drawable/module_circle_icon_community_32_blue_def"
         android:layout_width="14dp"
         android:layout_height="14dp" />
    <TextView
        android:id="@+id/tv_community_name"
        app:layout_constraintLeft_toRightOf="@id/iv_community"
        app:layout_constraintTop_toTopOf="@id/image"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/global_blue"
        android:lineSpacingExtra="7sp"
        android:text="外汇大咖联盟会"
        />
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="@color/gray_three"
        android:lineSpacingExtra="6sp"
        android:text="678 人"
        app:layout_constraintLeft_toLeftOf="@id/iv_community"
        app:layout_constraintBottom_toBottomOf="@id/image"
        />
    <View
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="65dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray_line"
        android:layout_height="0.5dp" />

</android.support.constraint.ConstraintLayout>
