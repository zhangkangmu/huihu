<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_circle_white">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:collapsedTitleGravity="center"
            app:expandedTitleGravity="center"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="pin">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="64dp"/>
                <TextView
                    android:id="@+id/tv_circle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="20dp"
                    android:gravity="start"
                    android:text="@string/module_circle_circle"
                    android:textColor="@color/text_black"
                    android:textSize="32sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/line"/>
                <android.support.constraint.ConstraintLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_title"
                        android:text="最新圈子"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textSize="18sp"
                        android:lineHeight="27sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_black"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp" />
                    <TextView
                        android:id="@+id/tv_refresh_data"
                        app:layout_constraintTop_toTopOf="@id/tv_title"
                        app:layout_constraintRight_toLeftOf="@id/iv_refreshData"
                        android:text="换一换"
                        android:textSize="14sp"
                        android:lineHeight="21sp"
                        android:lineSpacingExtra="7sp"
                        android:layout_marginEnd="4dp"
                        android:gravity="center"
                        android:textColor="@color/gray_two"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"/>
                    <ImageView
                        android:id="@+id/iv_refreshData"
                        app:layout_constraintTop_toTopOf="@id/tv_title"
                        app:layout_constraintBottom_toBottomOf="@id/tv_title"
                        app:layout_constraintRight_toRightOf="parent"
                        android:src="@drawable/module_circle_icon_change_32_def"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />
                    <com.huihu.module_circle.circle.view.ui.HuihuLoopingViewPager
                        android:id="@+id/viewpager"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:layout_constraintTop_toBottomOf="@id/iv_refreshData"
                        android:gravity="center"
                        android:clipChildren="false"
                        android:text=""/>
                    <com.huihu.module_circle.circle.view.ui.HuihuBannerIndicator
                        android:id="@+id/indicator_line"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        app:layout_constraintTop_toBottomOf="@id/viewpager"
                        app:vpi_default_color="@color/gray_three"
                        app:vpi_selected_color="@color/text_black"
                        app:vpi_distance="14dp"
                        app:vpi_distanceType="BY_DISTANCE"
                        app:vpi_indicatorType="CIRCLE_LINE"
                        app:vpi_length="14dp"
                        app:vpi_radius="3dp" />
                </android.support.constraint.ConstraintLayout>
                <View
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/line"/>
            </LinearLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white"
                app:layout_collapseMode="pin">
                <include layout="@layout/module_uilib_search_toolbar_style_1"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/v_indicator"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/white"
            android:paddingStart="10dp"
            app:layout_scrollFlags="enterAlways"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</android.support.design.widget.CoordinatorLayout>