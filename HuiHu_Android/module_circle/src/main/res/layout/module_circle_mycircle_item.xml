<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/header"
        android:visibility="gone"
        layout="@layout/module_circle_fragment_mycircle_header"
        android:layout_height="56dp"
        android:layout_width="match_parent"/>
    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <com.huihu.uilib.customize.CornerImageView
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:corner_radius="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="44dp"
        android:layout_height="44dp" />
    <TextView
        android:id="@+id/join"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="加入"
        android:gravity="center"
        android:background="@drawable/module_circle_shape_litterwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:lineHeight="21sp"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/global_blue"
        android:layout_width="77dp"
        android:visibility="gone"
        android:layout_height="32dp" />
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cons_manage"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="44dp">
            <TextView
                android:id="@+id/tv_manage"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/global_blue"
                android:lineSpacingExtra="7sp"
                android:gravity="end"
                android:text="@string/manage"
                />
            <TextView
                android:id="@+id/tv_discuss"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:lineSpacingExtra="7sp"
                android:gravity="end"
                android:text="个讨论更新"
                />
            <TextView
                android:id="@+id/tv_discuss_number"
                app:layout_constraintRight_toLeftOf="@id/tv_discuss"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/global_blue"
                android:lineSpacingExtra="7sp"
                android:gravity="end"
                android:text="96"
                />

        </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/tv_community_name"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintLeft_toRightOf="@id/image"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_black"
        android:lineSpacingExtra="7sp"
        android:text="外汇大咖联盟会"
        />
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="@color/gray_three"
        android:lineSpacingExtra="6sp"
        android:text="678 人"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/image"
        />
    <View
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="65dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray_line"
        android:layout_height="0.5dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
