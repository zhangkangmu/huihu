<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:background="@color/white">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_agree"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_agree"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/module_circle_icon_like"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_agree_count"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:gravity="center"
            android:lineHeight="18sp"
            android:text="6.1w"
            android:textSize="12sp"
            android:textColor="@color/module_circle_discuss_detail_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_agree" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_oppose"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/cl_agree"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_oppose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/module_circle_icon_down"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_oppose_count"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:gravity="center"
            android:lineHeight="18sp"
            android:text="1.6k"
            android:textColor="@color/module_circle_discuss_detail_bottom"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_oppose" />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_edit_comment"
        android:layout_width="155dp"
        android:layout_height="32dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/uilib_shape_search"
        app:layout_constraintRight_toLeftOf="@id/cl_comment"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_prohibited"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/module_circle_icon_prohibited"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginStart="4dp"
            android:text="写下你的评论"
            android:textSize="14dp"
            android:textColor="@color/gray_three"
            app:layout_constraintLeft_toRightOf="@id/iv_prohibited"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_comment"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/module_circle_icon_comment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:gravity="center"
            android:lineHeight="18sp"
            android:text="1.1w"
            android:textSize="12sp"
            android:textColor="@color/module_circle_discuss_detail_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_comment" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
