<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="17.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.huihu.uilib.customize.RoundImageView
        android:id="@+id/iv_avator"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/uilib_bg_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/uilib_label_caw"
        app:layout_constraintBottom_toBottomOf="@id/iv_avator"
        app:layout_constraintEnd_toEndOf="@id/iv_avator"/>
    <TextView
        android:id="@+id/tv_answer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="王思聪"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iv_avator"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_answer_time"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="1分钟前回答"
        android:textColor="@color/gray_three"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_avator"
        app:layout_constraintStart_toStartOf="@id/tv_answer_name"
        app:layout_constraintTop_toBottomOf="@id/tv_answer_name" />
    <TextView
        android:id="@+id/tv_answer_attention"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:text="关注TA"
        android:background="@drawable/module_home_shape_blue"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:lineHeight="21sp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/richEditor"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_avator"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </jp.wasabeef.richeditor.RichEditor>
    <include
        android:id="@+id/item_bottom"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/richEditor"
        android:layout_width="match_parent"
        android:visibility="invisible"
        layout="@layout/module_home_base_answers_bottom_item"/>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray_three"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="0.5dp" />
</android.support.constraint.ConstraintLayout>