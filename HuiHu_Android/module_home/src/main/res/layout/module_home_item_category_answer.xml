<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_question_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        tools:text="语雀是一款优雅高效的在线，文档编辑与协同工具， 让每个企业轻松拥?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.huihu.uilib.customize.RoundImageView
        android:id="@+id/iv_user_head"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        tools:src="@drawable/bg_net_fail_def"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question_content"/>

    <ImageView
        android:id="@+id/iv_identity"
        android:layout_width="13dp"
        android:layout_height="13dp"
        tools:background="@color/global_blue"
        app:layout_constraintEnd_toEndOf="@id/iv_user_head"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_head"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_black"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        tools:text="王思聪"
        app:layout_constraintTop_toTopOf="@id/iv_user_head"
        app:layout_constraintStart_toEndOf="@id/iv_user_head"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray_three"
        tools:text="1分钟前回答"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_head"
        app:layout_constraintStart_toStartOf="@id/tv_user_name"/>

    <TextView
        android:id="@+id/tv_do"
        android:textSize="14sp"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:textColor="@color/global_blue"
        android:background="@drawable/module_home_follow_it_bg_light_blue"
        android:layout_marginEnd="20dp"
        android:text="@string/module_home_text_attention_person"
        app:layout_constraintTop_toTopOf="@id/iv_user_head"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_head"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_answer_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_black"
        android:maxLines="3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_user_head"
        tools:text="Ant Design是一个服务于i.企业级产品的设计体系，基于『确定.l』和『自然』的设计价值.观和模块化的解决方案，让设计者专注地方"/>

    <com.huihu.uilib.customize.CategoryPicturesView
        android:id="@+id/view_pictures"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        tools:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_answer_content"/>

    <TextView
        android:id="@+id/tv_endorsed_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray_three"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        tools:text="1002.9w 赞同"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_pictures"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_comment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray_three"
        android:layout_marginStart="12dp"
        tools:text="382.1w 评论"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_endorsed_number"
        app:layout_constraintStart_toEndOf="@id/tv_endorsed_number"/>

    <ImageView
        android:id="@+id/iv_share_answer"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/module_home_icon_share"
        app:layout_constraintTop_toTopOf="@id/tv_endorsed_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_endorsed_number"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>