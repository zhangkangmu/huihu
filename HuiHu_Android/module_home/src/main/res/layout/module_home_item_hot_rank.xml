<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/module_home_text_black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="191dp"
        android:minHeight="48dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="8sp"
        android:maxLines="4"
        android:text=""
        android:textColor="@color/module_home_text_black"
        android:textSize="16sp"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_rank"/>

    <com.huihu.uilib.customize.CornerImageView
        android:id="@+id/iv_hotRank"
        android:layout_width="109dp"
        android:layout_height="81.5dp"
        android:layout_marginEnd="20dp"
        android:background="@color/module_home_search_bg"
        android:scaleType="centerCrop"
        app:corner_radius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"  />

    <TextView
        android:id="@+id/tv_hot"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:lineSpacingExtra="7sp"
        android:text="100.2w热度"
        android:textColor="@color/gray_three"
        android:textSize="12sp"
        android:lineHeight="18sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/iv_pic" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:lineSpacingExtra="7sp"
        android:text="639.9回答"
        android:textColor="@color/gray_three"
        android:textSize="12sp"
        android:lineHeight="18sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/tv_hot"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="43dp"
        android:background="@color/gray_line"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_pic"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>