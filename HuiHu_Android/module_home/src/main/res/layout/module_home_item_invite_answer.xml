<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <com.huihu.uilib.customize.RoundImageView
        android:id="@+id/iv_avator"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.huihu.uilib.customize.RoundImageView
        android:id="@+id/iv_mark"
        android:layout_width="13dp"
        android:layout_height="13dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_avator"
        app:layout_constraintEnd_toEndOf="@id/iv_avator"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_avator"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="杨荣臻TC"/>

    <TextView
        android:id="@+id/tv_invite"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/module_home_selector_bg_style_one"
        android:gravity="center"
        android:text="@string/module_home_text_invite"
        android:textColor="@color/module_home_selector_text_style_one"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginEnd="20dp"
        android:background="@color/module_home_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_name"/>
</android.support.constraint.ConstraintLayout>