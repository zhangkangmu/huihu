<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.huihu.uilib.customize.RoundImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/rv_user_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:text="王思聪"
            android:layout_marginLeft="12dp"
            android:id="@+id/tv_user_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/rv_user_logo"
            android:textSize="14sp"
            android:lineHeight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_submit_time"
            android:text="1分钟前回答"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:lineHeight="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name"
            app:layout_constraintLeft_toRightOf="@id/rv_user_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/module_mine_icon_delete_40_def"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_content"
            app:layout_constraintTop_toBottomOf="@id/tv_submit_time"
            app:layout_constraintLeft_toLeftOf="@id/tv_user_name"
            app:layout_constraintRight_toRightOf="@id/iv_delete"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:lineSpacingExtra="8sp"
            android:layout_marginTop="4dp"
            android:lineHeight="24sp"
            android:text="语雀是一款优雅高效的在线文档编辑与协同工具， 让每个企业轻松拥有文档中心阿里巴巴集团内部使用多年，众多。"
            />
        <GridView
            android:id="@+id/gridview"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:layout_constraintLeft_toLeftOf="@id/tv_user_name"
            app:layout_constraintRight_toRightOf="@id/iv_delete"
            android:layout_width="0dp"
            android:layout_marginTop="8.5dp"
            android:layout_height="wrap_content">
        </GridView>
        <com.huihu.uilib.customize.source.SourceView
            android:id="@+id/source_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gridview"/>
        <TextView
            android:id="@+id/iv_like"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/source_comment"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            android:drawableLeft="@drawable/module_mine_icon_like_48_def"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:lineHeight="18sp"
            android:gravity="center_vertical"
            android:text="734"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="335dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="19dp"
            android:background="@color/gray_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_like" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>