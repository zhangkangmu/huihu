<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/module_mine_shape_login_bg"
    android:paddingTop="25dp">

    <include
        android:id="@+id/panel_toolbar"
        layout="@layout/module_mine_panel_login_toolbar"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/module_mine_hint_send"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panel_toolbar"/>

    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:alpha="0.3"
        android:text="60s"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_hint"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.huihu.module_mine.loginbyphone.view.customize.RectangleBoxEditText
        android:id="@+id/et_rectangle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="20dp"
        android:cursorVisible="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        android:textSize="24sp"
        app:boxBackgroundColor="#19ffffff"
        app:boxCount="4"
        app:boxPadding="32dp"
        app:boxStokeColor="@color/module_mine_white"
        app:layout_constraintTop_toBottomOf="@id/tv_hint"
        app:numberTextColor="@color/module_mine_white"/>

    <TextView
        android:id="@+id/tv_reacquire_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/module_mine_reacquire_code"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_rectangle"/>

</android.support.constraint.ConstraintLayout>