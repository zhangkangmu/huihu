<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/isHot"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginRight="20.5dp"
        android:background="@drawable/module_mine_icon_hot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_popular_bottom_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/isHot"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:lineSpacingExtra="7sp"
        android:text="100.2w赞同"
        android:textColor="@color/gray_three"
        android:textSize="12sp"
         />

    <TextView
        android:id="@+id/tv_popular_bottom_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:lineSpacingExtra="7sp"
        android:text="639.9评论"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/gray_three"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/tv_popular_bottom_one"/>

    <TextView
        android:id="@+id/iv_popular_bottom_three"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20.5dp"
        android:background="@drawable/module_mine_icon_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="335dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:background="@color/gray_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_popular_bottom_one" />
</android.support.constraint.ConstraintLayout>
