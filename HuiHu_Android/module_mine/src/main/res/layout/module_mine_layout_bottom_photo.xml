<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/uilib_shape_picker_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_take_photo"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="拍照"
        android:textSize="18sp"
        android:textColor="@color/module_mine_text_black"
        android:background="@drawable/module_mine_selector_ll_bg"/>

    <TextView
        android:id="@+id/tv_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="从手机相册选择"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/module_mine_text_black"
        android:background="@drawable/module_mine_selector_ll_bg"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#33000000" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="取消"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/module_mine_dark_blue"
        android:background="@drawable/module_mine_selector_ll_bg"/>
</LinearLayout>
