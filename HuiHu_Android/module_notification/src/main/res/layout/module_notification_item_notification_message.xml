<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.huihu.uilib.customize.RoundImageView
        android:id="@+id/iv_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        tools:visibility="invisible"
        tools:src="@drawable/bg_no_data_def"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:id="@+id/fl_first_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/module_notification_bg_white_circle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.huihu.uilib.customize.RoundImageView
            android:id="@+id/iv_first_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/module_notification_bg_white_circle"
            tools:src="@drawable/bg_no_data_def" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_second_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/module_notification_bg_white_circle"
        android:layout_marginStart="16.5dp"
        android:layout_marginTop="16.5dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/fl_first_head"
        app:layout_constraintTop_toTopOf="@id/fl_first_head">
        <com.huihu.uilib.customize.RoundImageView
            android:id="@+id/iv_second_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="1.5dp"
            tools:src="@drawable/bg_net_fail_def"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_mark"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_head"
        app:layout_constraintEnd_toEndOf="@id/iv_head"/>

    <TextView
        android:id="@+id/tv_official"
        android:layout_width="27dp"
        android:layout_height="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="0.2dp"
        android:background="@drawable/ic_module_notification_label_official"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/module_notification_official"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_head"
        app:layout_constraintStart_toStartOf="@id/iv_head" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxWidth="90dp"
        android:singleLine="true"
        android:gravity="left"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_title_extra"
        app:layout_constraintTop_toTopOf="@id/iv_head"
        app:layout_constraintStart_toEndOf="@id/iv_head"
        app:layout_constraintHorizontal_bias="0"
        tools:text="系统通知系统通知系统通知系统通知" />

    <TextView
        android:id="@+id/tv_title_extra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxWidth="224dp"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_time"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_title"
        tools:text="等5人回答了问题" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginEnd="12dp"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_head"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintEnd_toStartOf="@id/tv_time"
        tools:text="从2015年4月起Ant Design在爱生活…" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        tools:text="1小时前"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.huihu.uilib.customize.RedPointView
        android:id="@+id/red_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        app:layout_constraintEnd_toEndOf="@id/tv_time"
        app:layout_constraintTop_toTopOf="@id/tv_message"
        app:layout_constraintBottom_toBottomOf="@id/tv_message"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#33000000"
        app:layout_constraintStart_toStartOf="@id/tv_message"
        app:layout_constraintEnd_toEndOf="@id/red_tip"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>