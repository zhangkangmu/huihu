<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.huihu.uilib.customize.RoundImageView
            android:id="@+id/iv_user_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            tools:src="@drawable/bg_net_fail_def"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_mark"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="23dp"
            android:layout_marginStart="23dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/iv_user_head"
            app:layout_constraintTop_toTopOf="@id/iv_user_head"/>

    </android.support.constraint.ConstraintLayout>




    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_black"
        android:layout_marginStart="12dp"
        tools:text="王思聪"
        app:layout_constraintTop_toTopOf="@id/cl_head"
        app:layout_constraintStart_toEndOf="@id/cl_head"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray_three"
        tools:text="1分钟前回答"
        app:layout_constraintBottom_toBottomOf="@id/cl_head"
        app:layout_constraintStart_toStartOf="@id/tv_user_name"/>

    <com.huihu.uilib.customize.RedPointView
        android:id="@+id/red_point_no_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/cl_head"
        app:layout_constraintBottom_toBottomOf="@id/cl_head"/>




</merge>