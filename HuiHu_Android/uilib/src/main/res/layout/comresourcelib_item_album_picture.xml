<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_album_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_album_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/bg_net_fail_def"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"/>

    <com.huihu.uilib.album.customize.SelectOrderView
        android:id="@+id/tv_select_order"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        tools:text="1"
        app:layout_constraintEnd_toEndOf="@id/iv_album_picture"
        app:layout_constraintTop_toTopOf="@id/iv_album_picture"/>

</android.support.constraint.ConstraintLayout>