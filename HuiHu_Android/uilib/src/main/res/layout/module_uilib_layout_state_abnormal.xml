<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_abnormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:src="@drawable/bg_net_fail_def"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <TextView
        android:id="@+id/tv_abnormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp"
        tools:text="各状态文案"
        app:layout_constraintTop_toBottomOf="@id/iv_abnormal"
        app:layout_constraintStart_toStartOf="@id/iv_abnormal"
        app:layout_constraintEnd_toEndOf="@id/iv_abnormal"/>

    <TextView
        android:id="@+id/tv_retry"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/global_blue"
        android:background="@drawable/background_global_blue_frame"
        android:gravity="center"
        android:text="@string/uilib_text_Retry"
        app:layout_constraintStart_toStartOf="@id/iv_abnormal"
        app:layout_constraintEnd_toEndOf="@id/iv_abnormal"
        app:layout_constraintTop_toBottomOf="@id/tv_abnormal"/>
</android.support.constraint.ConstraintLayout>